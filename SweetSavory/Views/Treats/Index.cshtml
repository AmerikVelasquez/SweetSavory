@{
	Layout = "_Layout";
}

@using SweetSavory.Models;
@model List<SweetSavory.Models.Treat>;

	<h1>Treat</h1>

	@if (@Model.Count == 0)
	{
		<h3>No Treats are added currently</h3>
	}

@foreach (Treat treat in Model)
{
	<li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId})</li>
}

<p>@Html.ActionLink("Add a new book", "Create")</p>
<p>@Html.ActionLink("Back to list of authors", "Index", "Authors")</p>
<p>@Html.ActionLink("Back to the home page", "Index", "Home")</p>